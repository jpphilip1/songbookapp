{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "types": [
      "hammerjs"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ]
    },
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
